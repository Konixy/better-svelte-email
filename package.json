{
	"name": "better-svelte-email",
	"version": "0.3.3",
	"author": "Konixy",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/Konixy/better-svelte-email.git"
	},
	"peerDependencies": {
		"svelte": ">5.14.3",
		"@sveltejs/kit": ">=2"
	},
	"peerDependenciesMeta": {
		"@sveltejs/kit": {
			"optional": true
		}
	},
	"dependencies": {
		"html-to-text": "^9.0.5",
		"magic-string": "^0.30.21",
		"tw-to-css": "^0.0.12"
	},
	"optionalDependencies": {
		"prettier": "^3.6.2",
		"resend": "^6.2.2",
		"shiki": "^3.14.0"
	},
	"devDependencies": {
		"@eslint/compat": "^1.4.0",
		"@eslint/js": "^9.38.0",
		"@sveltejs/adapter-vercel": "^6.0.0",
		"@sveltejs/kit": "^2.47.3",
		"@sveltejs/package": "^2.5.4",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tailwindcss/vite": "^4.1.16",
		"@types/html-to-text": "^9.0.4",
		"@types/node": "^24.9.1",
		"eslint": "^9.38.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.12.5",
		"globals": "^16.4.0",
		"gsap": "^3.13.0",
		"mdsvex": "^0.12.6",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.7.1",
		"publint": "^0.3.15",
		"rehype-autolink-headings": "^7.1.0",
		"rehype-slug": "^6.0.0",
		"svelte": "5.42.2",
		"svelte-check": "^4.3.3",
		"tailwindcss": "^4.1.16",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.46.2",
		"vite": "^7.1.12",
		"vitest": "^4.0.3"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js",
			"import": "./dist/preprocessor/index.js",
			"default": "./dist/preprocessor/index.js"
		},
		"./preprocessor": {
			"types": "./dist/preprocessor/index.d.ts",
			"import": "./dist/preprocessor/index.js",
			"default": "./dist/preprocessor/index.js"
		},
		"./components/*": {
			"types": "./dist/components/*.svelte.d.ts",
			"svelte": "./dist/components/*.svelte"
		},
		"./preview": {
			"types": "./dist/preview/index.d.ts",
			"import": "./dist/preview/index.js",
			"default": "./dist/preview/index.js"
		},
		"./preview/EmailPreview.svelte": {
			"types": "./dist/preview/EmailPreview.svelte.d.ts",
			"svelte": "./dist/preview/EmailPreview.svelte"
		},
		"./utils": {
			"types": "./dist/utils/index.d.ts",
			"import": "./dist/utils/index.js",
			"default": "./dist/utils/index.js"
		},
		"./package.json": "./package.json"
	},
	"description": "Svelte email renderer with Tailwind support",
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*",
		"!dist/emails"
	],
	"keywords": [
		"svelte",
		"svelte5",
		"email",
		"tailwind",
		"tailwindcss",
		"preprocessor",
		"inline-styles",
		"responsive-email",
		"email-templates",
		"svelte-preprocessor"
	],
	"license": "MIT",
	"scripts": {
		"dev": "vite dev",
		"build": "bun run prepack && vite build",
		"preview": "vite preview",
		"package": "svelte-package",
		"prepare": "svelte-kit sync || echo ''",
		"prepack": "svelte-kit sync && svelte-package && publint",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:ui": "vitest --ui",
		"test:coverage": "vitest run --coverage"
	},
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"type": "module",
	"types": "./dist/index.d.ts"
}
