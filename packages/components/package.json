{
	"name": "@better-svelte-email/components",
	"description": "Email components for better-svelte-email",
	"version": "1.4.0",
	"license": "MIT",
	"type": "module",
	"peerDependencies": {
		"svelte": ">=5.14.3",
		"@sveltejs/kit": ">=2"
	},
	"peerDependenciesMeta": {
		"@sveltejs/kit": {
			"optional": true
		}
	},
	"dependencies": {
		"@better-svelte-email/server": "workspace:*"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js",
			"import": "./dist/index.js",
			"default": "./dist/index.js"
		},
		"./utils": {
			"types": "./dist/utils/index.d.ts",
			"import": "./dist/utils/index.js",
			"default": "./dist/utils/index.js"
		},
		"./*.svelte": {
			"types": "./dist/components/*.svelte.d.ts",
			"svelte": "./dist/components/*.svelte"
		},
		"./package.json": "./package.json"
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*",
		"!dist/**/__tests__",
		"!dist/emails"
	],
	"scripts": {
		"build": "svelte-package -i src && publint",
		"lint": "prettier --check . --ignore-path ../../.prettierignore && eslint src",
		"test": "vitest run"
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts"
}
